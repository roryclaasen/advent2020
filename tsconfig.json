/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
  "compileOnSave": false,
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@2020/*": ["year2020/*"],
    }
  },
  "exclude": [".git", ".github", "**/node_modules"]
}
